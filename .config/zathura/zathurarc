# Font
set font 'JetBrainsMono Nerd Font 9'

# Settings
set statusbar-h-padding 20
set statusbar-v-padding 1
set page-padding 10
set scroll-step 100
set scroll-hstep 100

# Bindings
map u scroll half-up
map d scroll half-down
map <C-j> scroll full-down
map <C-k> scroll full-up
map D toggle_page_mode
map F toggle_fullscreen
map P toggle_presentation
map [presentation] P toggle_presentation
map [fullscreen] F toggle_fullscreen
map r reload
map R rotate
# map J zoom in
map _ zoom out
map i recolor
map p print

# Dracula theme
set window-title-basename "true"
set selection-clipboard "clipboard"

# Dracula color theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers

#
# Dracula color theme
#

set notification-error-bg       "#ff5555" # Red
set notification-error-fg       "#f8f8f2" # Foreground
set notification-warning-bg     "#de903e" # Orange
set notification-warning-fg     "#44475a" # Selection
set notification-bg             "#151721" # Background
set notification-fg             "#f8f8f2" # Foreground

set completion-bg               "#151721" # Background
set completion-fg               "#6272a4" # Comment
set completion-group-bg         "#151721" # Background
set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#f8f8f2" # Foreground

set index-bg                    "#151721" # Background
set index-fg                    "#f8f8f2" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#f8f8f2" # Foreground

set inputbar-bg                 "#151721" # Background
set inputbar-fg                 "#f8f8f2" # Foreground
set statusbar-bg                "#151721" # Background
set statusbar-fg                "#f8f8f2" # Foreground

set highlight-color             "#de903e" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#151721" # Background
set default-fg                  "#f8f8f2" # Foreground

set render-loading              true
set render-loading-fg           "#151721" # Background
set render-loading-bg           "#f8f8f2" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#161923" # Background
set recolor-darkcolor           "#e8e8e2" # Foreground
# set recolor-lightcolor          "#282a36" # Background
# set recolor-darkcolor           "#f8f8f2" # Foreground

#
# Startup options
#
set adjust-open width
set recolor false
